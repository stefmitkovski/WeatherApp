<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/weather_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/baseline_sunny"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/weather_icon"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="20dp"
            android:text="City: Madrid"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/city_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/weather_icon"
            android:layout_below="@+id/city_name"
            android:layout_marginHorizontal="20dp"
            android:text="Weather: Sunny"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/city_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/weather_icon"
            android:layout_below="@+id/city_weather"
            android:layout_marginHorizontal="20dp"
            android:text="Temperature: 0Â°"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/city_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/weather_icon"
            android:layout_below="@+id/city_temperature"
            android:layout_marginHorizontal="20dp"
            android:text="Last update: 12:00"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>